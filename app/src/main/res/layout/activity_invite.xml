<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_invite"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="邀请好友" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="1.填写好友邀请码"
            android:layout_marginTop="10dp" />


        <EditText
            android:id="@+id/insert_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="15dp"
            android:background="@drawable/edit_shape"
            android:maxLength="10"
            android:maxLines="1"
            android:minLines="1"
            android:textSize="20sp"
            android:scrollbars="vertical"
            android:hint="点击此处填写邀请码(仅首次有效)"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:inputType="textEmailAddress"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/invite_code_commit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="提交"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="2.您的专属邀请码"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/edit_shape"
            android:textSize="20sp"
            android:scrollbars="vertical"
            android:text="FC567VHJ"
            android:layout_margin="20dp"/>

    </LinearLayout>

</LinearLayout>