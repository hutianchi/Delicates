<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_user"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Delicates"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="注册/登录" />

        <Button
            android:id="@+id/to_be_member"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/user_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/to_be_member_shape"
            android:text="成为会员"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/member_level"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/to_be_member"
            android:layout_toRightOf="@id/to_be_member"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="V1-时尚菜鸟" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/touxiang" />

        <View
            android:id="@+id/split1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/to_be_member"
            android:layout_marginTop="30dp"
            android:background="@drawable/my_divider"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/split1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/background_light">

            <TextView
                android:id="@+id/personal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="个人信息"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="我的钱包"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="优惠券"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="邀请好友"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/common_problem"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="常见问题"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="用户反馈"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="设置"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/my_divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="客服电话: xxx-xxxx-xxxx"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>