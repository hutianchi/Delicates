<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/dialog_image"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_brand"
            android:layout_toRightOf="@id/dialog_image"
            android:layout_below="@id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尺码"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/size1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/selector_text"
            android:textColor="@drawable/text_color_selector_menu"
            android:clickable="true"
            android:text="M"/>

        <TextView
            android:id="@+id/size2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@drawable/text_color_selector_menu"
            android:background="@drawable/selector_text"
            android:text="L"/>

        <TextView
            android:id="@+id/size3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:clickable="false"
            android:textColor="@drawable/text_color_selector_menu"
            android:background="@drawable/selector_text"
            android:text="S"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="保存尺码"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@android:color/holo_red_light"
        android:textColor="#ffffff"/>


</LinearLayout>