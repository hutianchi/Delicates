<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/select_normal1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/s1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s1" />

                    <ImageView
                        android:id="@+id/s2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s2" />

                    <ImageView
                        android:id="@+id/s3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s3" />

                    <ImageView
                        android:id="@+id/s4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_normal2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/s5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s5" />

                    <ImageView
                        android:id="@+id/s6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s6" />

                    <ImageView
                        android:id="@+id/s7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s7" />

                    <ImageView
                        android:id="@+id/s8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/s8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/background_light">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="条件筛选"
                            android:layout_marginLeft="20dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/select_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="全部筛选"
                            android:textColor="@android:color/holo_red_light"
                            android:padding="2dp"
                            android:textSize="14sp"
                            android:drawableRight="@drawable/right"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/my_divider"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/horizontalScrollViewItemContainer1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />

                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/my_divider"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/horizontalScrollViewItemContainer2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />

                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/my_divider"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView3"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/horizontalScrollViewItemContainer3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />

                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/clothes_recycler"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/drawer_content"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:padding="10dp"
        android:background="#F9F9F9">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/select_commit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@android:color/background_light"
                    android:text="尺码"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/select_size"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@android:color/background_light"
                    android:horizontalSpacing="10dp"
                    android:padding="5dp"
                    android:numColumns="5"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="品类"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/select_type"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@android:color/background_light"
                    android:padding="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="场景"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/select_env"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@android:color/background_light"
                    android:padding="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="热门标签"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/select_tag"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@android:color/background_light"
                    android:padding="5dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/select_commit"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
